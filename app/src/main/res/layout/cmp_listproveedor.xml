<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtruc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:text="RUc"
        android:textAllCaps="true"
        android:textAppearance="?attr/tituloStyle"
        android:textStyle="bold"
        android:theme="@style/Theme.Ejer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRazonSocial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Razon Social"
        android:textAppearance="?attr/SubtituloStyle"
        android:textSize="16sp"
        android:textStyle="italic"
        android:theme="@style/Theme.Ejer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtruc" />

    <TextView
        android:id="@+id/txtEmailProveedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Email proveedor"
        android:textAppearance="?attr/SubtituloStyle"
        android:textSize="16sp"
        android:textStyle="italic"
        android:theme="@style/Theme.Ejer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRazonSocial" />

    <TextView
        android:id="@+id/txtCelularProveedor"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:text="+51 994 271 287"
        android:textSize="12dp"
        android:theme="@style/Theme.Ejer1"
        app:layout_constraintEnd_toStartOf="@+id/txtDireccionProveedor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailProveedor" />

    <TextView
        android:id="@+id/txtDireccionProveedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="Lima"
        android:textAlignment="textEnd"
        android:textSize="12dp"
        android:theme="@style/Theme.Ejer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCelularProveedor"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailProveedor" />

</androidx.constraintlayout.widget.ConstraintLayout>