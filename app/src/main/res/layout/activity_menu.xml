<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="350dp"
        android:layout_height="259dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="7dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="375dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/panel_curvo"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="116dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="386dp"
            android:layout_height="197dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_hombre"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_centerHorizontal="true"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@drawable/panel_blanco"
            android:elevation="8dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Of System"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iconImageView"
            style="?attr/iconoStyle"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_inventory_24" />

        <Button
            android:id="@+id/btnProductos"
            style="?attr/transparentButton"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingStart="16dp"
            android:text="Texto del botÃ³n"
            android:textSize="18sp"
            android:theme="@style/Theme.Ejer1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="312dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iconImageView2"
            style="?attr/iconoStyle"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_keyboard_arrow_right_24" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>