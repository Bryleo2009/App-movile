<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecio2"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgQr"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView

                android:id="@+id/txtIUP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:text="IUP"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescripcion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="15dp"
                android:text="Descripcion del producto"
                android:textAlignment="center"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTipo2"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginEnd="147dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Tipo Producto"
                    android:textAlignment="textEnd"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txtPrecio2"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:text="Precio"
                    android:textAlignment="textStart"
                    android:textSize="12dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/txtNombre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="15dp"
                android:text="Nombre del Producto"
                android:textAlignment="center"
                android:textAppearance="?attr/tituloStyle"
                android:textStyle="bold"
                android:theme="@style/Theme.Ejer1" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:ems="10"
                android:inputType="text"
                android:text="Tallas"
                android:textSize="12sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txtTalla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="229dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Talla"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:text="Marcas"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:text="Colores"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtMarca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Marca"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:text="Etiquetas"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="25dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Etiqueta"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>