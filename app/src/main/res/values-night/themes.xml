<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Customize your dark theme here. -->
    <style name="Base.Theme.Ejer1" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>

        <!--Componentes nuevos-->
        <!-- tituloStyle -->
        <item name="tituloStyle">@style/titulo_dark</item>
        <!-- SubtituloStyle -->
        <item name="SubtituloStyle">@style/subtitulo_dark</item>
        <!-- Establece el color del tÃ­tulo en el modo oscuro -->
        <item name="toolbarTitleTextColor">@style/toolbarTitleTextColor_dark</item>
        <item name="iconoStyle">@style/Icono.Nocturno</item>
        <item name="transparentButton">@style/transparentButton</item>
        <item name="parrafoStyle">@color/white</item>
        <item name="fechaStyle">@style/Icono.flecha</item>
    </style>


    <!-- Estilos de texto -->
    <style name="titulo_dark" parent="Titulo">
        <item name="android:textColor">@color/titulo_dark</item>
    </style>
    <style name="subtitulo_dark" parent="Subtitulo">
        <item name="android:textColor">@color/subtitulo_dark</item>
    </style>
    <style name="toolbarTitleTextColor_dark">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Icono.Nocturno">
        <item name="android:tint">@color/colorPrimary_dark</item>
    </style>
    <style name="Icono.flecha">
        <item name="android:tint">@color/flecha_dark</item>
    </style>


    <style name="Theme.Ejer1" parent="Base.Theme.Ejer1" />

</resources>
