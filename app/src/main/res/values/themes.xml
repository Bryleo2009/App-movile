<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Cosas que yo creo-->
    <attr name="tituloStyle" format="reference" />
    <attr name="SubtituloStyle" format="reference" />
    <attr name="toolbarTitleTextColor" format="reference" />
    <attr name="iconoStyle" format="reference" />
    <attr name="transparentButton" format="reference" />
    <attr name="parrafoStyle" format="reference" />
    <attr name="fechaStyle" format="reference" />

    <!--Esquema Base-->
    <style name="Theme.Ejer1" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>

        <!--Componentes nuevos-->
        <!-- tituloStyle -->
        <item name="tituloStyle">@style/titulo_light</item>
        <!-- SubtituloStyle -->
        <item name="SubtituloStyle">@style/subtitulo_light</item>
        <!-- Establece el color del tÃ­tulo en el modo claro -->
        <item name="toolbarTitleTextColor">@style/toolbarTitleTextColor_ligth</item>
        <item name="iconoStyle">@style/Icono.Claro</item>
        <item name="transparentButton">@style/transparentButton</item>
        <item name="parrafoStyle">@color/black</item>
        <item name="fechaStyle">@style/Icono.flecha</item>
    </style>

    <!--    Estilo general Texto-->
    <style name="Titulo">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Subtitulo">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <!-- Estilos de texto -->
    <style name="titulo_light" parent="Titulo">
        <item name="android:textColor">@color/titulo_lithg</item>
    </style>
    <style name="subtitulo_light" parent="Subtitulo">
        <item name="android:textColor">@color/subtitulo_light</item>
    </style>
    <style name="toolbarTitleTextColor_ligth">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Icono">
        <item name="android:tint">@color/colorPrimary_light</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Icono.Claro">
        <item name="android:tint">@color/colorPrimary_light</item>
    </style>
    <style name="Icono.flecha">
        <item name="android:tint">@color/flecha_lithg</item>
    </style>
    <style name="transparentButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- Base application theme. -->
    <style name="Base.Theme.Ejer1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>